<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tabLayoutCommodity" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutCommodity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabSelectedTextColor="@color/brown"
        app:tabIndicatorColor="@color/brown"
        app:tabIndicatorHeight="2dp"
        app:tabRippleColor="@null"
        app:tabIconTint="@color/brown"
        app:tabIndicatorFullWidth="false"
        tools:layout_editor_absoluteX="-112dp"
        android:background="@drawable/topline" >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/person_manager"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/setting"/>
    </com.google.android.material.tabs.TabLayout>

