<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lhr.teethHospital">

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.any"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.teethHospital">
        <activity
            android:allowBackup="true"
            android:name=".util.Cover.CoverActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.lhr.teethHospital.util.Main.MainActivity"
                  android:launchMode="singleTask"
                  android:requestLegacyExternalStorage = "true"
                  android:theme="@style/AppTheme"></activity>

        <activity android:name="com.lhr.teethHospital.util.Teach.TeachActivity"
                  android:launchMode="singleTask"
                  android:theme="@style/AppTheme"></activity>

        <activity android:name="com.lhr.teethHospital.util.Camera.CameraActivity"
                  android:launchMode="singleTask"
                  android:theme="@style/AppTheme"></activity>

        <activity android:name="com.lhr.teethHospital.util.Camera.TakePicture.TakePictureActivity"
                  android:launchMode="singleTask"
                  android:theme="@style/AppTheme"></activity>

        <activity android:name="com.lhr.teethHospital.util.History.HistoryActivity"
                  android:launchMode="singleTask"
                  android:theme="@style/AppTheme"></activity>

        <activity android:name="com.lhr.teethHospital.util.DetectResult.DetectResultActivity"
                  android:launchMode="singleTask"
                  android:theme="@style/AppTheme"></activity>

        <activity android:name="com.lhr.teethHospital.util.ClassmateInformation.PatientInformationActivity"
                  android:launchMode="singleTask"
                  android:theme="@style/AppTheme"></activity>

        <activity android:name="com.lhr.teethHospital.util.EditPatientInformation.EditPatientInformationActivity"
                  android:launchMode="singleTask"
                  android:theme="@style/AppTheme"></activity>
    </application>
    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE"/>
        </intent>
        <intent>
            <action android:name="android.intent.action.PICK"/>
            <data android:mimeType="image/*"/>
        </intent>
    </queries>


</manifest>